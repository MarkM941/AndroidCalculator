<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.personal.mmillstein.androidcalculator.MainActivity"
    tools:showIn="@layout/activity_main">

    <TextView
        android:id="@+id/text_calculator"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:text="Default text for view" />

    <GridLayout
        android:id="@+id/calc_grid_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4">

        <Button
            android:id="@+id/button_1"
            android:layout_column="0"
            android:layout_row="0"
            android:gravity="center"
            android:onClick="handleNumberButtonPress"
            android:text="1" />

        <Button
            android:id="@+id/button_2"
            android:layout_column="1"
            android:layout_row="0"
            android:gravity="center"
            android:onClick="handleNumberButtonPress"
            android:text="2" />

        <Button
            android:id="@+id/button_3"
            android:layout_column="2"
            android:layout_row="0"
            android:gravity="center"
            android:onClick="handleNumberButtonPress"
            android:text="3" />

        <Button
            android:id="@+id/button_addition"
            android:layout_column="3"
            android:layout_row="0"
            android:gravity="center"
            android:onClick="handleOperationButtonPress"
            android:text="+" />

        <Button
            android:id="@+id/button_4"
            android:layout_column="0"
            android:layout_row="1"
            android:gravity="center"
            android:onClick="handleNumberButtonPress"
            android:text="4" />

        <Button
            android:id="@+id/button_fice"
            android:layout_column="1"
            android:layout_row="1"
            android:gravity="center"
            android:onClick="handleNumberButtonPress"
            android:text="5" />

        <Button
            android:id="@+id/button_6"
            android:layout_column="2"
            android:layout_row="1"
            android:gravity="center"
            android:onClick="handleNumberButtonPress"
            android:text="6" />

        <Button
            android:id="@+id/button_subtraction"
            android:layout_column="3"
            android:layout_row="1"
            android:gravity="center"
            android:onClick="handleOperationButtonPress"
            android:text="-" />

        <Button
            android:id="@+id/button_7"
            android:layout_column="0"
            android:layout_row="2"
            android:gravity="center"
            android:onClick="handleNumberButtonPress"
            android:text="7" />

        <Button
            android:id="@+id/button_8"
            android:layout_column="1"
            android:layout_row="2"
            android:gravity="center"
            android:onClick="handleNumberButtonPress"
            android:text="8" />

        <Button
            android:id="@+id/button_9"
            android:layout_column="2"
            android:layout_row="2"
            android:gravity="center"
            android:onClick="handleNumberButtonPress"
            android:text="9" />

        <Button
            android:id="@+id/button_multiplication"
            android:layout_column="3"
            android:layout_row="2"
            android:gravity="center"
            android:onClick="handleOperationButtonPress"
            android:text="*" />

        <Button
            android:id="@+id/button_0"
            android:layout_column="1"
            android:layout_row="3"
            android:gravity="center"
            android:onClick="handleNumberButtonPress"
            android:text="0" />

        <Button
            android:id="@+id/button_equals"
            android:layout_column="2"
            android:layout_row="3"
            android:gravity="center"
            android:onClick="handleEqualsButtonPress"
            android:text="=" />

        <Button
            android:id="@+id/button_division"
            android:layout_column="3"
            android:layout_row="3"
            android:gravity="center"
            android:onClick="handleOperationButtonPress"
            android:text="/" />

    </GridLayout>

</LinearLayout>
